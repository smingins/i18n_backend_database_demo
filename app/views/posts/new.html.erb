<h1>New post</h1>

<% form_for(@post) do |f| %>
  <%= hidden_field_tag :locale, I18n.locale %>
  <%= f.error_messages %>

  <p>
    <%= f.label :content %><br />
    <%= f.text_field :content %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', posts_path(:locale => I18n.locale) %>
